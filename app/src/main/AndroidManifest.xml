<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e_buyad.marvin.e_buyad">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity android:name=".PasscodeActivity" />
        <activity android:name=".QRLoginActivity" />
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".LoadPointActivity"
            android:label="@string/title_activity_load_point"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ShopActivity"
            android:label="@string/title_activity_shop"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ViewCardActivity"
            android:label="@string/title_activity_view_card"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".HistoryActivity"
            android:label="@string/title_activity_history"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ProductDetailActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ShoppingCartListActivity"
            android:label="@string/title_activity_shopping_cart_list"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>