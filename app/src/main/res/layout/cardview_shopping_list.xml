<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_shopping_list"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardBackgroundColor="@color/cast_intro_overlay_button_background_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transaction_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Transaction #"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@id/transaction_number"
            android:layout_toRightOf="@id/transaction_number"
            android:gravity="right"
            android:textColor="#FFFFFF"
            android:text="Date of transaction"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/generic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_below="@id/transaction_number"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:text="Product Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/generic_name"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:text="Quantity"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>